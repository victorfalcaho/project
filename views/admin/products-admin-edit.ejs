<%- include('../partials/header.ejs'); %>


<div class="row mt-5">
  <div class="col-4"></div>
  <div class="col-4">
    <form action="/administrador/editar-producto" method="POST" enctype="multipart/form-data">
      <div class="form-group">
        <label for="titulo">Titulo</label>
        <input type="text" class="form-control" name="titulo" value="<%= result.titulo %>">
      </div>
      <div class="form-group">
        <label for="descripcion">Descripcion</label>
        <input type="text" class="form-control" name="descripcion" value="<%= result.descripcion %>">
      </div>
      <div class="form-group">
        <label for="precio">Precio</label>
        <input type="number" class="form-control" name="precio" value="<%= result.precio %>">
      </div>
      <div class="form-group">
        <label for="estado">Activo o inactivo</label>
        <select name="estado" id="estado" class="form-control">
          <option value="<%= result.estado %>"><%=result.estado==0?'Inactivo':'Activo'%>
          </option>
          <option value="1">Activo</option>
          <option value="0">Inactivo</option>
        </select>
      </div>
      <div class="form-group">
        <label for="imagen">Imagen</label>
        <input type="file" class="form-control" name="imagen" required>
      </div>
      <div class="form-group">
        <label for="autor">Autor</label>
        <input type="text" class="form-control" name="autor" value="<%= result.autor %>">
      </div>
      <div class="form-group">
        <label for="tecnologia">Tecnologia</label>
        <select name="tecnologia" id="tecnologia" class="form-control">
          <option value="<%= result.tecnologia %>"><%= result.tecnologia %></option>
          <option value="php">php</option>
          <option value="php">nodejs</option>
          <option value="php">python</option>
          <option value="php">javascript</option>
          <option value="php">c#</option>
          <option value="php">java</option>
        </select>
      </div>
      <div class="form-group">
        <label for="zip">Zip</label>
        <input type="file" class="form-control" name="zip" required>
      </div>
      <div class="form-group">
        <input type="hidden" name="id" value="<%= result.id %>">
        <button class="btn btn-primary btn-block" type="submit">Actualizar producto</button>
      </div>
    </form>
  </div>
  <div class="col-4"></div>
</div>

<%- include('../partials/footer.ejs'); %>