<%- include('./partials/header.ejs'); %>

<div class="row">
    <div class="col-12">
        <h1 class="my-4">Detalle producto</h1>
    </div>
</div>

<div class="row">
    <div class="col-3">
        <!-- Blog Post -->
        <div class="card mb-4">
            <img class="card-img-top" src="/imagenes/<%= result.imagen %>">
            <div class="card-body">
                <h2 class="card-title"><%= result.titulo %></h2>
                <p class="card-text"><%= result.descripcion %></p>
                <a href="#" class="btn btn-primary btn-block">$ <%= result.precio %></a>
                <% if (typeof session.usuarioid !== "undefined") { %>
                <% } %>
            </div>
            <div class="card-footer text-muted">
                <a href="#"><%= result.tecnologia %></a>
                by
                <a href="#"><%= result.autor %></a>
            </div>
        </div>
    </div>
</div>


